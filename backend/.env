 # Database connection string (update user, password, host, port, db as needed)
DATABASE_URL=postgresql://postgres:postgres_password@postgres:5432/apartment_accounting

# Flask secret key (use a long, random value in production)
SECRET_KEY=your-very-secret-key-here

# JWT algorithm (HS256 is default, you can use RS256 for more security)
JWT_ALGORITHM=HS256

# Token expiration in seconds (default: 3600 = 1 hour)
TOKEN_EXPIRES_SECONDS=3600


# Flask environment (set to 'development' for dev, 'production' for prod)
FLASK_ENV=development
